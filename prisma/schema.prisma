// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  INACTIVE
}

enum KYCLevel {
  TIER1
  TIER2
  TIER3
  UNVERIFIED
}

enum KYCStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TransactionType {
  CREDIT
  DEBIT
}

enum TransactionStatus {
  PENDING
  SUCCESSFUL
  FAILED
  REVERSED
}

enum TransactionCategory {
  WALLET_TRANSFER
  BANK_WITHDRAWAL
  BANK_FUNDING
  CARD_FUNDING
  REFUND
}

enum OTPType {
  EMAIL_VERIFICATION
  PHONE_VERIFICATION
  PASSWORD_RESET
  TRANSACTION_PIN
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  phone         String?    @unique
  password      String
  firstName     String
  lastName      String
  emailVerified Boolean    @default(false)
  phoneVerified Boolean    @default(false)
  status        UserStatus @default(ACTIVE)
  kycLevel      KYCLevel   @default(UNVERIFIED)
  pin           String?
  pinAttempts   Int        @default(0)
  pinLockedAt   DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  wallet       Wallet?
  kyc          KYC?
  otps         OTP[]
  devices      Device[]
  sentTransactions     Transaction[] @relation("SenderTransactions")
  receivedTransactions Transaction[] @relation("ReceiverTransactions")

  @@index([email])
  @@index([phone])
}

model Wallet {
  id              String   @id @default(uuid())
  userId          String   @unique
  accountNumber   String   @unique
  balance         Decimal  @default(0) @db.Decimal(15, 2)
  previousBalance Decimal  @default(0) @db.Decimal(15, 2)
  currency        String   @default("NGN")
  isLocked        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([accountNumber])
  @@index([userId])
}

model Transaction {
  id                String              @id @default(uuid())
  reference         String              @unique
  amount            Decimal             @db.Decimal(15, 2)
  fee               Decimal             @default(0) @db.Decimal(15, 2)
  totalAmount       Decimal             @db.Decimal(15, 2)
  type              TransactionType
  category          TransactionCategory
  status            TransactionStatus   @default(PENDING)
  description       String?
  metadata          Json?
  
  // Sender/Initiator
  senderId          String?
  senderWalletId    String?
  senderBalanceBefore   Decimal?        @db.Decimal(15, 2)
  senderBalanceAfter    Decimal?        @db.Decimal(15, 2)
  
  // Receiver/Beneficiary
  receiverId        String?
  receiverWalletId  String?
  receiverBalanceBefore Decimal?        @db.Decimal(15, 2)
  receiverBalanceAfter  Decimal?        @db.Decimal(15, 2)
  
  // Bank details (for bank transfers)
  bankCode          String?
  bankName          String?
  accountNumber     String?
  accountName       String?
  
  failureReason     String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  sender           User?   @relation("SenderTransactions", fields: [senderId], references: [id])
  receiver         User?   @relation("ReceiverTransactions", fields: [receiverId], references: [id])
  senderWallet     Wallet? @relation(fields: [senderWalletId], references: [id])

  @@index([reference])
  @@index([senderId])
  @@index([receiverId])
  @@index([status])
  @@index([createdAt])
}

model KYC {
  id               String    @id @default(uuid())
  userId           String    @unique
  level            KYCLevel  @default(TIER1)
  status           KYCStatus @default(PENDING)
  
  // Tier 1 (Basic Info)
  bvn              String?
  dateOfBirth      DateTime?
  address          String?
  
  // Tier 2 (Government ID)
  idType           String?
  idNumber         String?
  idImageUrl       String?
  
  // Tier 3 (Advanced Verification)
  utilityBillUrl   String?
  selfieUrl        String?
  
  rejectionReason  String?
  verifiedAt       DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model OTP {
  id        String   @id @default(uuid())
  userId    String
  code      String
  type      OTPType
  expiresAt DateTime
  verified  Boolean  @default(false)
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([code])
}

model Device {
  id           String   @id @default(uuid())
  userId       String
  deviceId     String   @unique
  deviceName   String?
  deviceType   String?
  ipAddress    String?
  userAgent    String?
  isTrusted    Boolean  @default(false)
  lastUsedAt   DateTime @default(now())
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([deviceId])
}
